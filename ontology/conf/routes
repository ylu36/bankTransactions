# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# RESTful APIs 
POST    /addconsumer/:id            controllers.HomeController.addConsumer(id: Integer)
POST    /addmerchant/:id            controllers.HomeController.addMerchant(id: Integer)
POST    /addtransaction/:senderID/:receiverID/:transactionID controllers.HomeController.addTransaction(senderID: Integer, receiverID: Integer, transactionID: Integer)